{% extends 'base.njk' %}
{% block content %}
  <div class='content'>
    {{ content | safe }}
  </div>
  <aside class="row-start-1 align-self-start">
    <ul role="list">
      {% for news_item in collections.news  | reverse %}
        <li>
            <a href="{{ news_item.url }}" target="{{news_item.target}}">{{ news_item.data.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </aside>
{% endblock %}